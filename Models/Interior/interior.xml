<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>tour</object-name>
    <object-name>structure</object-name>
    <object-name>seat</object-name>
    
    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>intvitres</object-name>
  </effect>

  <!-- Pilote -->
  <model>
    <path>Aircraft/BV-141/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -3.625 </x-m>
      <y-m>  1.471 </y-m>
      <z-m>  0.067 </z-m>
    </offsets>
  </model>

  <!-- Panel -->
  <model>
    <path>Aircraft/BV-141/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -3.87387 </x-m>
      <y-m>  1.63377 </y-m>
      <z-m>  0.63325 </z-m>
    </offsets>
  </model>

  <!-- Panel -->
  <model>
    <path>Aircraft/BV-141/Models/Interior/Panel/Instruments/Pedals/pedals.xml</path>
    <offsets>
      <x-m> -4.19780 </x-m>
      <y-m>  1.45594 </y-m>
      <z-m> -0.34521 </z-m>
    </offsets>
  </model>

</PropertyList>
