<!-- Blohm & Voss BV 141 
     BARANGER Emmanuel -->

<airplane mass="10000">

  <!-- Approach configuration -->
  <approach speed="65" aoa="14" fuel="0.6">  <!-- 55 -->
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.4"/>  <!--0.2-->
    <control-setting axis="/controls/engines/engine[0]/mixture" value="1.0"/>
    <control-setting axis="/controls/engines/engine[0]/propeller-pitch" value="1.0"/>
    <control-setting axis="/controls/flight/flaps" value="1.0"/>
  </approach>

  <!-- Cruise configuration -->
  <cruise speed="180" alt="9000" fuel="1.0">
    <control-setting axis="/controls/engines/engine[0]/throttle" value="1.0"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="0.6"/>
    <control-setting axis="/controls/engines/engine[0]/propeller-pitch" value="0.8"/>
    <control-setting axis="/controls/flight/flaps" value="0.0"/>
  </cruise>

  <cockpit x="4.402" y="-1.615" z="0.525"/>

  <!-- Cabine -->
  <fuselage ax="5.442" ay="-1.634" az="-0.168" bx="0.402" by="-1.634" bz="-0.530"
            width="1.323" taper="0.97" midpoint="0"/>

  <!-- Moteur -->
  <fuselage ax="5.811" ay="0.552" az="-0.120" bx="-4.095" by="0.552" bz="0.287"
            width="1.149" taper="0.258" midpoint="0"/>

  <wing x="2.814" y="0.0" z="-0.215" 
      taper="0.676" 
      incidence="0" 
      twist="0"
      length="7.473" 
      chord="2.374" 
      sweep="0" 
      dihedral="0" 
      camber="0.1">
      <stall aoa="16" width="1.0" peak="1.5"/>
      <flap0 start="0" end="0.58" lift="1.4" drag="1.5"/>
      <flap1 start="0.58" end="0.98" lift="1.2" drag="1.1"/>
      <control-input axis="/controls/flight/flaps" control="FLAP0"/>
      <control-speed control="FLAP0" transition-time="5"/>
      <control-input axis="/controls/flight/aileron" control="FLAP1" split="true"/>
      <control-input axis="/controls/flight/aileron-trim" control="FLAP1" split="true"/>
      <control-output control="FLAP0" prop="/surface-positions/flap-pos-norm"/>
      <control-output control="FLAP1" side="left" prop="/surface-positions/left-aileron-pos-norm"/>
      <control-output control="FLAP1" side="right" prop="/surface-positions/right-aileron-pos-norm"/>
  </wing>

  <hstab x="-2.981" y="0.546" z="0.732" 
       taper="0.587" 
       incidence="0" 
       length="3.227" 
       chord="1.268" 
       sweep="3.23">
       <stall aoa="16" width="4" peak="1.5"/>
       <flap0 start="0" end="1" lift="2.0" drag="1.1" effectiveness="2"/>
       <control-input axis="/controls/flight/elevator" control="FLAP0"/>
       <control-input axis="/controls/flight/elevator-trim" control="FLAP0"/>
       <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
  </hstab>

  <vstab x="-3.617" y="0.546" z="-0.244" 
       taper="0.96" 
       length="2.377" 
       chord="1.040" 
       sweep="26.6">
       <stall aoa="14" width="3" peak="1.5"/>
       <flap0 start="0" end="1" lift="1.5" drag="1.2"/>
       <control-input axis="/controls/flight/rudder" control="FLAP0" invert="true"/>
       <control-input axis="/controls/flight/rudder-trim" control="FLAP0" invert="true"/>
       <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm" min="1" max="-1"/>
  </vstab>

  <!-- Daimler Benz DB 605 E1 >
                           turbo-mul="2" 
	                   wastegate-mp="40"> -->
  <propeller x="4.853" y="0.552" z="-0.120"
             mass="1200" 
	     moment="40" 
	     radius="1.5"
             cruise-power="960" 
  	     cruise-speed="187"
             cruise-rpm="976" 
	     cruise-alt="9000"
             gear-ratio="0.465"
             min-rpm="100" 
	     max-rpm="2700">
             <actionpt x="5.604" y="0.552" z="-0.120"/>
             <control-input axis="/controls/engines/engine[0]/propeller-pitch" control="ADVANCE"/>
             <piston-engine eng-power="960" 
	                    eng-rpm="1255">
                            <control-input axis="/controls/engines/engine[0]/throttle" control="THROTTLE"/>
                            <control-input axis="/controls/engines/engine[0]/starter" control="STARTER"/>
                            <control-input axis="/controls/engines/engine[0]/magnetos" control="MAGNETOS"/>
                            <control-input axis="/controls/engines/engine[0]/mixture" control="MIXTURE"/>
             </piston-engine>
  </propeller>

  <gear x="3.733" y="2.249" z="-2.438" 
      compression=".2" 
      spring=".6" 
      retract-time="5">
      <control-input axis="/controls/gear/brake-left" control="BRAKE" split="true"/>
      <control-input axis="/controls/gear/brake-parking" control="BRAKE" split="true"/>
      <control-input axis="/controls/gear/gear-down" control="EXTEND"/>

      <control-speed control="EXTEND" transition-time="4.2"/>

      <control-output control="EXTEND" prop="/gear/gear[0]/position-norm"/>
  </gear>

  <gear x="3.733" y="-2.249" z="-2.438" 
      compression=".2" 
      spring=".6" 
      retract-time="5">
      <control-input axis="/controls/gear/brake-right" control="BRAKE" split="true"/>
      <control-input axis="/controls/gear/brake-parking" control="BRAKE" split="true"/>
      <control-input axis="/controls/gear/gear-down" control="EXTEND"/>

      <control-speed control="EXTEND" transition-time="4"/>

      <control-output control="EXTEND" prop="/gear/gear[1]/position-norm"/>
  </gear>

  <gear x="-3.208" y="0.552" z="-0.717" 
      compression=".15" 
      spring=".6" 
      retract-time="5">
      <control-input axis="/controls/gear/gear-down" control="EXTEND"/>

      <control-speed control="EXTEND" transition-time="5"/>

      <control-output control="EXTEND" prop="/gear/gear[2]/position-norm"/>
  </gear>

  <tank x="4.5" y="4.0" z="-0.215" capacity="300"/>
  <tank x="4.5" y="-4.0" z="-0.215" capacity="300"/>

  <!-- CG thÃ©orique centre de la corde : x=2.814 y=0.000 z=-0.215 -->
  <ballast x="8.58" y="0.685" z="-2.32" mass="500"/>

</airplane>
