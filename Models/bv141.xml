<?xml version="1.0"?>

<PropertyList>

  <path>bv-141.ac</path>

  <nasal>
    <load>
      var livery_update = aircraft.livery_update.new("Aircraft/bv-141/Models/Liveries", 10);
    </load>
    <unload>
      livery_update.stop();
    </unload>
  </nasal>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>pilote</object-name>
    <object-name>moteur</object-name>
    <object-name>aile</object-name>
    <object-name>derive</object-name>
    <object-name>profondeur</object-name>
    <object-name>direction</object-name>
    <object-name>porteG</object-name>
    <object-name>axeGH</object-name>
    <object-name>axeGB</object-name>
    <object-name>roueG</object-name>
    <object-name>porteD</object-name>
    <object-name>axeDH</object-name>
    <object-name>axeDB</object-name>
    <object-name>roueD</object-name>
    <object-name>axeAB</object-name>
    <object-name>roueA</object-name>
    <object-name>bol</object-name>
    <object-name>helice</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>voletG</object-name>
    <object-name>voletC</object-name>
    <object-name>voletD</object-name>

    <!-- Objets transparents -->
    <object-name>vitres</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitres</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fuselage</object-name>
    <object-name>pilote</object-name>
    <object-name>moteur</object-name>
    <object-name>aile</object-name>
    <object-name>derive</object-name>
    <object-name>profondeur</object-name>
    <object-name>direction</object-name>
    <object-name>porteG</object-name>
    <object-name>axeGH</object-name>
    <object-name>axeGB</object-name>
    <object-name>roueG</object-name>
    <object-name>porteD</object-name>
    <object-name>axeDH</object-name>
    <object-name>axeDB</object-name>
    <object-name>roueD</object-name>
    <object-name>axeAB</object-name>
    <object-name>roueA</object-name>
    <object-name>bol</object-name>
    <object-name>helice</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>voletG</object-name>
    <object-name>voletC</object-name>
    <object-name>voletD</object-name>

    <property-base>sim/model/livery</property-base>
    <texture-prop>texture</texture-prop>
    <texture>texture.png</texture>
  </animation>

  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
  </animation>

  <!-- Interieur -->
  <model>
    <path>Aircraft/BV-141/Models/Interior/interior.xml</path>
    <offsets>
      <x-m> 0.000 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.000 </z-m>
    </offsets>
  </model>

  <!-- L'hélice --> 
  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>/engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>/engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>/engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>/engines/engine[0]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>/engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -5.604 </x-m>
      <y-m> -0.552 </y-m>
      <z-m> -0.120 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>/controls/flight/rudder</property>
    <factor>20</factor>
    <center>
      <x-m>  3.523 </x-m>
      <y-m> -0.552 </y-m>
      <z-m>  0.288 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y>  0.000 </y>
      <z>  1.000 </z>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>/surface-positions/left-aileron-pos-norm</property>
    <factor>-15.0</factor>
    <axis>
      <x1-m> -2.071 </x1-m>
      <y1-m> -4.483 </y1-m>
      <z1-m> -0.108 </z1-m>
      <x2-m> -2.445 </x2-m>
      <y2-m> -7.429 </y2-m>
      <z2-m>  0.216 </z2-m>
    </axis>
  </animation> 

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>/surface-positions/right-aileron-pos-norm</property>
    <factor>-15.0</factor>
    <axis>
      <x1-m> -2.445 </x1-m>
      <y1-m>  7.429 </y1-m>
      <z1-m>  0.216 </z1-m>
      <x2-m> -2.071 </x2-m>
      <y2-m>  4.483 </y2-m>
      <z2-m> -0.108 </z2-m>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>/controls/flight/elevator</property>
    <factor>11</factor>
    <center>
      <x-m>  3.068 </x-m>
      <y-m> -0.551 </y-m>
      <z-m>  0.724 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Volets -->
  <animation>
    <type>rotate</type>
    <object-name>voletG</object-name>
    <property>/surface-positions/flap-pos-norm</property>
    <factor>-45.0</factor>
    <axis>
      <x1-m> -2.077 </x1-m>
      <y1-m> -3.291 </y1-m>
      <z1-m> -0.239 </z1-m>
      <x2-m> -2.077 </x2-m>
      <y2-m> -4.436 </y2-m>
      <z2-m> -0.123 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>voletC</object-name>
    <property>/surface-positions/flap-pos-norm</property>
    <factor>45.0</factor>
    <center>
      <x-m> -2.077 </x-m>
      <y-m>  0.494 </y-m>
      <z-m> -0.240 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>voletD</object-name>
    <property>/surface-positions/flap-pos-norm</property>
    <factor>-45.0</factor>
    <axis>
      <x1-m> -2.077 </x1-m>
      <y1-m>  4.436 </y1-m>
      <z1-m> -0.123 </z1-m>
      <x2-m> -2.077 </x2-m>
      <y2-m>  3.291 </y2-m>
      <z2-m> -0.239 </z2-m>
    </axis>
  </animation>

  <!-- Rentrée des roues -->
  <animation>
    <type>rotate</type>
    <object-name>axeGH</object-name>
    <object-name>axeGB</object-name>
    <object-name>roueG</object-name>
    <property>/gear/gear[0]/position-norm</property>
    <interpolation>
      <entry>
        <ind>  1.00 </ind>
        <dep>  0.00 </dep>
      </entry>
      <entry>
        <ind>   0.00 </ind>
        <dep> -97.00 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -3.567 </x-m>
      <y-m> -2.346 </y-m>
      <z-m> -0.327 </z-m>
    </center>
    <axis>
      <x>  1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>axeGH</object-name>
    <object-name>axeGB</object-name>
    <object-name>roueG</object-name>
    <property>/gear/gear[0]/position-norm</property>
    <interpolation>
      <entry>
        <ind>  1.00 </ind>
        <dep>  0.00 </dep>
      </entry>
      <entry>
        <ind>   0.00 </ind>
        <dep> -13.00 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -3.567 </x-m>
      <y-m> -2.346 </y-m>
      <z-m> -0.327 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y>  1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>axeDH</object-name>
    <object-name>axeDB</object-name>
    <object-name>roueD</object-name>
    <property>/gear/gear[1]/position-norm</property>
    <interpolation>
      <entry>
        <ind>  1.00 </ind>
        <dep>  0.00 </dep>
      </entry>
      <entry>
        <ind>   0.00 </ind>
        <dep> -97.00 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -3.567 </x-m>
      <y-m>  2.346 </y-m>
      <z-m> -0.327 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>axeDH</object-name>
    <object-name>axeDB</object-name>
    <object-name>roueD</object-name>
    <property>/gear/gear[1]/position-norm</property>
    <interpolation>
      <entry>
        <ind>  1.00 </ind>
        <dep>  0.00 </dep>
      </entry>
      <entry>
        <ind>  0.00 </ind>
        <dep> 13.00 </dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -3.567 </x-m>
      <y-m>  2.346 </y-m>
      <z-m> -0.327 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Compression -->
  <animation>
    <type>translate</type>
    <object-name>axeGB</object-name>
    <object-name>roueG</object-name>
    <property>/gear/gear[0]/compression-norm</property>
    <factor> 0.3 </factor>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>axeDB</object-name>
    <object-name>roueD</object-name>
    <property>/gear/gear[1]/compression-norm</property>
    <factor> 0.3 </factor>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>roueA</object-name>
    <property>/gear/gear[2]/compression-norm</property>
    <factor> 0.3 </factor>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>/gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -3.733 </x-m>
      <y-m> -2.349 </y-m>
      <z-m> -2.047 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>/gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -3.733 </x-m>
      <y-m>  2.349 </y-m>
      <z-m> -2.047 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueA</object-name>
    <property>/gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m>  3.208 </x-m>
      <y-m> -0.552 </y-m>
      <z-m> -0.556 </z-m>
    </center>
    <axis>
      <x>  0.000 </x>
      <y> -1.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Fermeture des portes des trains -->
  <animation>
    <type>rotate</type>
    <object-name>porteG</object-name>
    <property>/gear/gear[0]/position-norm</property>
    <interpolation>
      <entry>
        <ind>  0.00 </ind>
        <dep>  0.00 </dep>
      </entry>
      <entry>
        <ind>  1.00 </ind>
        <dep> 99.00 </dep>
      </entry>
    </interpolation>
    <axis>
      <x1-m> -3.785 </x1-m>
      <y1-m> -2.292 </y1-m>
      <z1-m> -0.368 </z1-m>
      <x2-m> -3.302 </x2-m>
      <y2-m> -2.292 </y2-m>
      <z2-m> -0.449 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>porteD</object-name>
    <property>/gear/gear[1]/position-norm</property>
    <interpolation>
      <entry>
        <ind>  0.00 </ind>
        <dep>  0.00 </dep>
      </entry>
      <entry>
        <ind>  1.00 </ind>
        <dep> 99.00 </dep>
      </entry>
    </interpolation>
    <axis>
      <x1-m> -3.302 </x1-m>
      <y1-m>  2.292 </y1-m>
      <z1-m> -0.449 </z1-m>
      <x2-m> -3.785 </x2-m>
      <y2-m>  2.292 </y2-m>
      <z2-m> -0.368 </z2-m>
    </axis>
  </animation>

</PropertyList>

